{
  "compilerOptions": {
    "outDir": "./dist/",
    "types": ["@types/react"],
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
        "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
},
"ts-node": {
    "compilerOptions": {
        "module": "CommonJS"
    }
},
  "include": ["src", "jest.config.ts", "jest/setupTests.ts", "src/**/*.tsx", "test/**/*.ts"]
}
