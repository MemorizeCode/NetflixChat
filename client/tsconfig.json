{
  "compilerOptions": {
    "outDir": "./dist/",
    "types": ["@types/react" , "node"],
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
        "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
},
// "ts-node": {
//     "compilerOptions": {
//         "module": "CommonJS"
//     }
// },
  "include": ["src", "jest.config.ts", "jest/setupTests.ts", "src/**/*.tsx", "test/**/*.ts"]
}
